<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".operator_item_accepted_orders">

  <TextView
      android:id="@+id/tvAcceptedOrderOperatorHeader"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="50dp"
      android:fontFamily="@font/golos_medium"
      android:gravity="center"
      android:hint="OrderID"
      android:text="ИНФОРМАЦИЯ О ЗАКАЗЕ"
      android:textSize="24dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ScrollView
      android:id="@+id/scrollViewOperatorAcceptedOrders"
      android:layout_width="409dp"
      android:layout_height="0dp"
      android:layout_marginTop="45dp"
      android:fadeScrollbars="false"
      android:isScrollContainer="true"
      android:nestedScrollingEnabled="true"
      android:overScrollMode="ifContentScrolls"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvAcceptedOrderOperatorHeader"
      app:layout_constraintVertical_bias="0.0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="50dp"
        android:minHeight="50dp">

      <TextView
          android:id="@+id/tvDeliveryFromOperatorAcceptedOrder"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="25dp"
          android:layout_marginTop="40dp"
          android:layout_marginEnd="50dp"
          android:clickable="true"
          android:fontFamily="@font/golos_medium"
          android:hint="delivery from"
          android:textSize="18sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/iconDeliveryFrom"
          app:layout_constraintTop_toBottomOf="@+id/tvCargoNameOperatorAcceptedOrder" />

      <TextView
          android:id="@+id/tvDeliveryToOperatorAcceptedOrder"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="25dp"
          android:layout_marginTop="40dp"
          android:layout_marginEnd="50dp"
          android:clickable="true"
          android:fontFamily="@font/golos_medium"
          android:hint="delivery to"
          android:textSize="18sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/iconDeliveryTo"
          app:layout_constraintTop_toBottomOf="@+id/tvDeliveryFromOperatorAcceptedOrder" />

      <TextView
          android:id="@+id/tvCargoNameOperatorAcceptedOrder"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="25dp"
          android:layout_marginTop="25dp"
          android:layout_marginEnd="50dp"
          android:fontFamily="@font/golos_medium"
          android:hint="name"
          android:textSize="18sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/iconCargoName"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/tvCargoSizeOperatorAcceptedOrder"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="25dp"
          android:layout_marginTop="40dp"
          android:layout_marginEnd="50dp"
          android:fontFamily="@font/golos_medium"
          android:hint="Размер не указан"
          android:textSize="18sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/iconSize"
          app:layout_constraintTop_toBottomOf="@+id/tvDeliveryToOperatorAcceptedOrder" />

      <TextView
          android:id="@+id/tvCargoWeightOperatorAcceptedOrder"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="25dp"
          android:layout_marginTop="40dp"
          android:layout_marginEnd="50dp"
          android:fontFamily="@font/golos_medium"
          android:hint="Вес не указан"
          android:textSize="18sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/iconWeight"
          app:layout_constraintTop_toBottomOf="@+id/tvCargoSizeOperatorAcceptedOrder" />

      <TextView
          android:id="@+id/tvShippingByOperatorAcceptedOrder"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="25dp"
          android:layout_marginTop="40dp"
          android:layout_marginEnd="50dp"

          android:fontFamily="@font/golos_medium"
          android:hint="shippingby"
          android:textSize="18sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/iconShippingBy"
          app:layout_constraintTop_toBottomOf="@+id/tvCargoWeightOperatorAcceptedOrder" />


      <ImageView
          android:id="@+id/iconWeight"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_marginStart="50dp"
          app:layout_constraintBottom_toBottomOf="@+id/tvCargoWeightOperatorAcceptedOrder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/tvCargoWeightOperatorAcceptedOrder"
          app:srcCompat="@drawable/iconweight" />

      <ImageView
          android:id="@+id/iconShippingBy"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_marginStart="50dp"
          app:layout_constraintBottom_toBottomOf="@+id/tvShippingByOperatorAcceptedOrder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/tvShippingByOperatorAcceptedOrder"
          app:srcCompat="@drawable/iconcourier" />

      <ImageView
          android:id="@+id/iconSize"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_marginStart="50dp"
          app:layout_constraintBottom_toBottomOf="@+id/tvCargoSizeOperatorAcceptedOrder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/tvCargoSizeOperatorAcceptedOrder"
          app:srcCompat="@drawable/iconsize" />

      <ImageView
          android:id="@+id/iconDeliveryFrom"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_marginStart="50dp"
          app:layout_constraintBottom_toBottomOf="@+id/tvDeliveryFromOperatorAcceptedOrder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/tvDeliveryFromOperatorAcceptedOrder"
          app:srcCompat="@drawable/icondeliveryfrom" />

      <ImageView
          android:id="@+id/iconDeliveryTo"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_marginStart="50dp"
          app:layout_constraintBottom_toBottomOf="@+id/tvDeliveryToOperatorAcceptedOrder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/tvDeliveryToOperatorAcceptedOrder"
          app:srcCompat="@drawable/icondeliveryto" />

      <ImageView
          android:id="@+id/iconCargoName"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_marginStart="50dp"
          app:layout_constraintBottom_toBottomOf="@+id/tvCargoNameOperatorAcceptedOrder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/tvCargoNameOperatorAcceptedOrder"
          app:srcCompat="@drawable/iconcargoname" />

    </androidx.constraintlayout.widget.ConstraintLayout></ScrollView></androidx.constraintlayout.widget.ConstraintLayout>