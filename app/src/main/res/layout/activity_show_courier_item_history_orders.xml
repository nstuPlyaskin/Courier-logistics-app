<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".show_courier_item_history_orders">

    <TextView
        android:id="@+id/tvHistoryOrderCourierHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/golos_medium"
        android:gravity="center"
        android:hint="OrderID"
        android:text="ИНФОРМАЦИЯ О ЗАКАЗЕ"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollViewHistoryOrders"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:fadeScrollbars="false"
        android:isScrollContainer="true"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHistoryOrderCourierHeader"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="50dp"
            android:minHeight="50dp">

            <TextView
                android:id="@+id/tvDeliveryFromCourierHistoryOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:clickable="true"
                android:fontFamily="@font/golos_medium"
                android:hint="delivery from"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconDeliveryFrom"
                app:layout_constraintTop_toBottomOf="@+id/tvCargoNameCourierHistoryOrder" />

            <TextView
                android:id="@+id/tvDeliveryToCourierHistoryOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:clickable="true"
                android:fontFamily="@font/golos_medium"
                android:hint="delivery to"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconDeliveryTo"
                app:layout_constraintTop_toBottomOf="@+id/tvDeliveryFromCourierHistoryOrder" />

            <TextView
                android:id="@+id/tvCargoNameCourierHistoryOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/golos_medium"
                android:hint="name"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconCargoName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCargoSizeCourierHistoryOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/golos_medium"
                android:hint="Размер не указан"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconSize"
                app:layout_constraintTop_toBottomOf="@+id/tvDeliveryToCourierHistoryOrder" />

            <TextView
                android:id="@+id/tvCargoWeightCourierHistoryOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/golos_medium"
                android:hint="Вес не указан"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconWeight"
                app:layout_constraintTop_toBottomOf="@+id/tvCargoSizeCourierHistoryOrder" />

            <TextView
                android:id="@+id/tvShippingByCourierHistoryOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"

                android:fontFamily="@font/golos_medium"
                android:hint="shippingby"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconShippingBy"
                app:layout_constraintTop_toBottomOf="@+id/tvCargoWeightCourierHistoryOrder" />


            <TextView
                android:id="@+id/tvFinishTimeCourierHistoryOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"

                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/golos_medium"
                android:hint="finishTime"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iconFinishTime"
                app:layout_constraintTop_toBottomOf="@+id/tvShippingByCourierHistoryOrder" />

            <ImageView
                android:id="@+id/iconFinishTime"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvFinishTimeCourierHistoryOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvFinishTimeCourierHistoryOrder"
                app:srcCompat="@drawable/icontime" />

            <ImageView
                android:id="@+id/iconWeight"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCargoWeightCourierHistoryOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCargoWeightCourierHistoryOrder"
                app:srcCompat="@drawable/iconweight" />

            <ImageView
                android:id="@+id/iconShippingBy"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvShippingByCourierHistoryOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvShippingByCourierHistoryOrder"
                app:srcCompat="@drawable/iconcourier" />

            <ImageView
                android:id="@+id/iconSize"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCargoSizeCourierHistoryOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCargoSizeCourierHistoryOrder"
                app:srcCompat="@drawable/iconsize" />

            <ImageView
                android:id="@+id/iconDeliveryFrom"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDeliveryFromCourierHistoryOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvDeliveryFromCourierHistoryOrder"
                app:srcCompat="@drawable/icondeliveryfrom" />

            <ImageView
                android:id="@+id/iconDeliveryTo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDeliveryToCourierHistoryOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvDeliveryToCourierHistoryOrder"
                app:srcCompat="@drawable/icondeliveryto" />

            <ImageView
                android:id="@+id/iconCargoName"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCargoNameCourierHistoryOrder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCargoNameCourierHistoryOrder"
                app:srcCompat="@drawable/iconcargoname" />

        </androidx.constraintlayout.widget.ConstraintLayout></ScrollView></androidx.constraintlayout.widget.ConstraintLayout>